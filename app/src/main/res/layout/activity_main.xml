<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Apps"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Spotify Streamer"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:background="#F08C35"
            android:onClick="spotifyMessage" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Scores App"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:background="#F08C35"
            android:onClick="scoresMessage" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Library App"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:background="#F08C35"
            android:onClick="libraryMessage" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Build it Bigger"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal"
            android:background="#F08C35"
            android:onClick="buildMessage" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="XYZ Reader"
            android:id="@+id/button5"
            android:layout_gravity="center_horizontal"
            android:background="#F08C35"
            android:onClick="xyzMessage" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Capstone"
            android:id="@+id/button6"
            android:layout_gravity="center_horizontal"
            android:background="#ffff1307"
            android:onClick="capstoneMessage" />
    </LinearLayout>
</RelativeLayout>
